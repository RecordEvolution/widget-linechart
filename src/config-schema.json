
{
    "title": "Configure the line-chart",
    "description": "The following settings allow you to configure the line chart.",
    "type": "object",
    "properties": {
        "settings": {
            "description": "General widget settings",
            "type": "object",
            "properties": {
                "title": {
                    "description": "Main title",
                    "type": "string"
                },
                "subTitle": {
                    "type": "string"
                }
            },
            "required": ["title", "subTitle"]
        },
        "dataseries": {
            "title": "Dataseries settings",
            "description": "Following settings influence the style and data",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "showLine": {
                        "type": "boolean"
                    },
                    "radius": {
                        "description": "Point radius",
                        "type": "number",
                        "minimum": 1,
                        "maximum": 100
                    },
                    "pointStyle": {
                        "type": "string"
                    },
                    "backgroundColor": {
                        "type": "string"
                    },
                    "borderColor": {
                        "type": "string"
                    },
                    "borderWidth": {
                        "type": "number"
                    },
                    "fill": {
                        "type": "boolean"
                    },
                    "data": {
                        "title": "Widget data",
                        "description": "This is the Chartdata",
                        "type": "array",
                        "buffersize": 1000,
                        "items": {
                            "type": "object",
                            "properties": {
                                "x": {
                                    "description": "Has to be an ISO String date like 2023-11-04T22:47:52.351152+00:00",
                                    "type": "string"
                                },
                                "y": {
                                    "type": "number"
                                }
                            },
                            "required": ["x", "y"]
                        }
                    }
                },
                "required": ["label"]
            }
        }
    },
    "required": ["settings"]
}
